<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_law_tracking_legislature_filter" model="ir.ui.view">
            <field name="name">law_tracking.legislature.select</field>
            <field name="model">law_tracking.legislature</field>
            <field name="arch" type="xml">
                <search string="Legislatures" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Name"
                            />
                    <field name="state_id" string="State"
                            />
                    <field name="type" string="Type"
                            />
                    <field name="country_id" string="Country"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_law_tracking_legislature_form" model="ir.ui.view">
            <field name="name">law_tracking.legislature.form</field>
            <field name="model">law_tracking.legislature</field>
            <field name="arch" type="xml">
                <form string="Legislatures" version="7.0">
                    <header>
                    </header>
                    <sheet string="Legislatures">
                     <group>
                        <field name="name"
                            />
                        <field name="state_id"
                            />
                        <field name="type"
                            />
                        <field name="image"
                            />
                        <field name="country_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_law_tracking_legislature_tree" model="ir.ui.view">
            <field name="name">law_tracking.legislature.tree</field>
            <field name="model">law_tracking.legislature</field>
            <field name="arch" type="xml">
                <tree string="Legislatures"
                    >
                    <field name="name"
                        />
                    <field name="state_id"
                        />
                    <field name="type"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
