<?xml version="1.0"?>
<openerp>
    <data>



        <record id="res_company_pos_receipt_format_form_view" model="ir.ui.view">
            <field name="name">res.company.pos.receipt_format.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>

            <field name="arch" type="xml">

                <xpath expr="//page[@string='Report Configuration']" position="after">
                    <page string="Extra">


                        <group col="1" colspan="2">
                            <group>
                                <field name="area"/>
                                <field name="route"/>
                                <field name="cbib"/>
                                <field name="slsnn"/>
                            </group>
                        </group>





                    </page>

                </xpath>


            </field>
        </record>



    </data>
</openerp>